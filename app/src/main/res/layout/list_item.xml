<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:background="@drawable/black_gradient">

	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/TextViewGeneralTitulo" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="20sp"
		android:textColor="@android:color/background_light"
		android:layout_gravity="left" />

	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/TextViewGeneralAutorFecha" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:textSize="10sp"
		android:textColor="@android:color/background_light"
		android:layout_gravity="left" />
</LinearLayout>